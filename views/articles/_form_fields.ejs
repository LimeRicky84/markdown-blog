<div class="form-group">
    <label for="title">Title</label>
    <input required value= "<%= article.title %>" required type="text" name="title" id="title" class="form-control mt-2">
</div>
<div class="form-group mt-4">
    <label for="description">Description</label>
    <textarea name="description" id="description" class="form-control mt-2"><%= article.description %></textarea>
</div>
<div class="form-group mt-4">
    <label for="markdown">Body</label>
    <textarea required name="markdown" id="markdown" rows="8" class="form-control mt-2"><%= article.markdown %></textarea>
</div>

<a href="/" class="btn btn-secondary mt-3">Cancel</a>
<button type="submit" class="btn btn-primary mt-3">Save</button>